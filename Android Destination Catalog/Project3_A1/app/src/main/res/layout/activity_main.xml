<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@android:dimen/thumbnail_height"
        android:text="Attractions"
        android:id="@+id/attractionsText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attractions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Restaurants"
        android:id="@+id/restaurantsText"
        />

    <Button
        android:id="@+id/attractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/attractionsText"
        android:onClick="sendAttractions"
        android:text="Enter"></Button>

    <Button
        android:id="@+id/restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/restaurantsText"
        android:onClick="sendRestaurants"
        android:text="Enter"></Button>

</RelativeLayout>